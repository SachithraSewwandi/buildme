extends layout
block content
   .container(ng-controller="loginControl")
      .row(id="pwd-container")
         .col-md-4
         .col-md-4
            section.login-form
            form(method="post",action="#",role="login")
               img.img-responsive(src="http://i.imgur.com/RcmcLv4.png",alt="" )
               input.form-control.input-lg(type="email",name="email",required,ng-model="email")
               input.form-control.input-lg(type="password" ,d="password",required="",ng-model="password")
               //div.pwstrength_viewport_progress


               button.btn.btn-lg.btn-primary.btn-block(type="submit" name="go" ) Sign in

               p.text-center
                  a(href="/users/adduser") Create account or
                  a(href="#")  reset password


